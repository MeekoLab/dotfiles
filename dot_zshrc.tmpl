# ~/.zshrc
# Managed by chezmoi - edit with: chezmoi edit ~/.zshrc

# ============================================================================
# Oh My Zsh Configuration
# ============================================================================

# Path to oh-my-zsh installation
export ZSH="$HOME/.oh-my-zsh"

# Set theme (disable if using starship)
if command -v starship &>/dev/null; then
    ZSH_THEME=""  # Disable oh-my-zsh theme when using starship
else
    ZSH_THEME="robbyrussell"
fi

# Plugins
plugins=(
    git
    docker
    node
    npm
    python
    rust
    command-not-found
    zsh-autosuggestions
    zsh-syntax-highlighting
)

# Load Oh My Zsh (if installed)
if [ -f "$ZSH/oh-my-zsh.sh" ]; then
    source "$ZSH/oh-my-zsh.sh"
fi

# ============================================================================
# Environment Variables
# ============================================================================

export EDITOR='vim'
export VISUAL='code'

# Add local bin to PATH
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/bin:$PATH"

# History settings
export HISTSIZE=10000
export SAVEHIST=20000
export HISTFILE=~/.zsh_history
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_FIND_NO_DUPS
setopt SHARE_HISTORY
setopt APPEND_HISTORY
setopt INC_APPEND_HISTORY

# ============================================================================
# Zsh Options
# ============================================================================

# Enable auto cd (type directory name to cd)
setopt AUTO_CD

# Case insensitive globbing
setopt NO_CASE_GLOB

# Extended globbing
setopt EXTENDED_GLOB

# Correct typos
setopt CORRECT

# Don't beep
unsetopt BEEP

# ============================================================================
# Colors
# ============================================================================

# Enable color support
autoload -U colors && colors

# Colored ls output
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

# ============================================================================
# Completion
# ============================================================================

# Enable completion
autoload -Uz compinit
compinit

# Case insensitive completion
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}'

# Colored completion
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}"

# Menu completion
zstyle ':completion:*' menu select

# Cache completion
zstyle ':completion::complete:*' use-cache 1
zstyle ':completion::complete:*' cache-path ~/.zsh/cache

# ============================================================================
# Aliases
# ============================================================================

# Load aliases if they exist
if [ -f ~/.aliases ]; then
    source ~/.aliases
fi

# Load functions if they exist
if [ -f ~/.functions ]; then
    source ~/.functions
fi

# ============================================================================
# Platform-specific settings
# ============================================================================

{{- if eq .chezmoi.os "darwin" }}
# macOS specific settings

# Homebrew
if [ -f /opt/homebrew/bin/brew ]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
fi

# iTerm2 shell integration
test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

{{- else if eq .chezmoi.os "linux" }}
# Linux specific settings

{{- if eq .chezmoi.osRelease.id "opensuse" "opensuse-tumbleweed" "opensuse-leap" }}
# openSUSE specific settings
{{- end }}

{{- end }}

# ============================================================================
# Development Tools
# ============================================================================

# Node Version Manager (nvm)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/nvm.zsh_completion" ] && \. "$NVM_DIR/nvm.zsh_completion"

# Python (pyenv)
export PYENV_ROOT="$HOME/.pyenv"
if [ -d "$PYENV_ROOT/bin" ]; then
    export PATH="$PYENV_ROOT/bin:$PATH"
    eval "$(pyenv init -)"
fi

# Rust (cargo)
if [ -f "$HOME/.cargo/env" ]; then
    source "$HOME/.cargo/env"
fi

# Go
export GOPATH="$HOME/go"
export PATH="$PATH:$GOPATH/bin"

# ============================================================================
# Key Bindings
# ============================================================================

# Use vim key bindings (optional - comment out if you prefer emacs mode)
# bindkey -v

# Ctrl+R for history search
bindkey '^R' history-incremental-search-backward

# ============================================================================
# Custom Settings
# ============================================================================

# Load local settings (not tracked by chezmoi)
if [ -f ~/.zshrc.local ]; then
    source ~/.zshrc.local
fi

# ============================================================================
# Starship Prompt
# ============================================================================

# Initialize starship if installed
if command -v starship &>/dev/null; then
    eval "$(starship init zsh)"
fi

# ============================================================================
# Welcome Message
# ============================================================================

# Display system info on login (if neofetch is installed)
if command -v neofetch &>/dev/null; then
    neofetch
fi
