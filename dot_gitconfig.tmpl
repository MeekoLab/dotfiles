# Git configuration
# Managed by chezmoi - edit with: chezmoi edit ~/.gitconfig

[user]
    name = {{ .name }}
    email = {{ .email }}

[core]
    editor = code --wait
    autocrlf = input
    # Prevent showing files whose names contain non-ASCII symbols as unversioned
    precomposeunicode = false
    # Make `git rebase` safer on macOS
    trustctime = false
    # Prevent showing files whose names contain non-ASCII symbols as unversioned
    quotepath = false
    # Speed up commands involving untracked files such as `git status`
    untrackedCache = true
{{- if eq .chezmoi.os "windows" }}
    autocrlf = true
{{- end }}

[init]
    defaultBranch = main

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    # View abbreviated SHA, description, and history graph
    l = log --pretty=oneline -n 20 --graph --abbrev-commit

    # View the current working tree status
    s = status -sb

    # Show the diff between the latest commit and the current state
    d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"

    # Pull with rebase
    p = pull --rebase

    # Clone a repository including all submodules
    c = clone --recursive

    # Commit all changes
    ca = !git add -A && git commit -av

    # Switch to a branch, creating it if necessary
    go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"

    # Show verbose output about tags, branches or remotes
    tags = tag -l
    branches = branch -a
    remotes = remote -v

    # Amend the currently staged files to the latest commit
    amend = commit --amend --reuse-message=HEAD

    # Credit an author on the latest commit
    credit = "!f() { git commit --amend --author \"$1 <$2>\" -C HEAD; }; f"

    # Interactive rebase with the given number of latest commits
    reb = "!r() { git rebase -i HEAD~$1; }; r"

    # Find branches containing commit
    fb = "!f() { git branch -a --contains $1; }; f"

    # Find tags containing commit
    ft = "!f() { git describe --always --contains $1; }; f"

    # Find commits by source code
    fc = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short -S$1; }; f"

    # Find commits by commit message
    fm = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short --grep=$1; }; f"

    # Remove branches that have already been merged with main
    dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

    # List contributors with number of commits
    contributors = shortlog --summary --numbered

    # Show the user email for the current repository
    whoami = config user.email

    # Undo last commit
    undo = reset HEAD~1 --mixed

    # Stash with message
    stash-msg = "!f() { git stash push -m \"$1\"; }; f"

[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix

[branch]
    # Show most recently changed branches first
    sort = -committerdate

[diff]
    # Detect copies as well as renames
    renames = copies
    # Enable an experimental heuristic that shifts the hunk boundary
    indentHeuristic = true

[diff "bin"]
    # Use `hexdump` to diff binary files
    textconv = hexdump -v -C

[help]
    # Automatically correct and execute mistyped commands
    autocorrect = 1

[merge]
    # Include summaries of merged commits in newly created merge commit messages
    log = true
    conflictstyle = diff3

[pull]
    rebase = false

[push]
    # Push easily. http://stackoverflow.com/a/23918418/89484
    default = simple
    # Make `git push` push relevant annotated tags when pushing branches out
    followTags = true

[fetch]
    prune = true

[rebase]
    autoStash = true

# URL shorthands
[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
    insteadOf = "github:"

[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
    insteadOf = "gist:"

# Platform-specific settings
{{- if eq .chezmoi.os "darwin" }}
[credential]
    helper = osxkeychain
{{- else if eq .chezmoi.os "linux" }}
[credential]
    helper = cache --timeout=3600
{{- else if eq .chezmoi.os "windows" }}
[credential]
    helper = manager
{{- end }}
