# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 4

# PowerShell
[*.{ps1,psm1,psd1}]
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Python
[*.py]
indent_size = 4

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass,less}]
indent_size = 2

# Go
[*.go]
indent_style = tab
indent_size = 4

# Rust
[*.rs]
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Package files
[{package.json,package-lock.json}]
indent_size = 2
